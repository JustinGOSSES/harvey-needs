        <%= form.text_area :notes, id: :shelter_update_notes %>

        <% if shelter.persisted? %>
          <%= form.submit "Submit Update" %>
          <%= link_to 'Back', shelter, class: "button button-clear" %>
        <% else %>
          <%= form.submit "Submit New Shelter" %>
          <%= link_to 'Back', shelters_path, class: "button button-clear" %>
        <% end %>
    <% end %>
  </fieldset>
<% end %>
