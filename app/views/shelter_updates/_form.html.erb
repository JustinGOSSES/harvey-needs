        <%= form.text_field :address, id: :shelter_update_address %>

        <%= form.label :city %>
        <%= form.text_field :city, id: :shelter_update_city %>

        <%= form.label :county %>
        <%= form.text_field :county, id: :shelter_update_county %>

        <%= form.label :phone %>
        <%= form.text_field :phone, id: :shelter_update_phone %>

        <%= form.label :contact_name %>
        <%= form.text_field :contact_name, id: :shelter_update_contact_name %>

        <%= form.label :url %>
        <%= form.text_field :url, id: :shelter_update_url %>

        <%= form.label :pets %>
        <%= form.check_box :pets, id: :shelter_update_pets %> Check for Yes

        <%= form.label :pet_notes %>
        <%= form.text_area :pet_notes, id: :shelter_update_pet_notes %>

